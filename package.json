{
  "name": "bord",
  "private": true,
  "version": "0.4.3",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:ui\"",
    "dev:server": "bun run --watch server/index.ts",
    "dev:ui": "vite",
    "build": "vite build",
    "build:server": "bun build server/index.ts --compile --outfile dist/bord-server",
    "fixtures:setup": "bun run scripts/fixtures/setup-demo.ts",
    "fixtures:register": "bun run scripts/fixtures/register-workspaces.ts",
    "fixtures:cleanup": "bun run scripts/fixtures/cleanup-demo.ts",
    "qa:capture-media": "bun run scripts/qa/capture-media.ts",
    "qa:capture-hscroll": "bun run scripts/qa/capture-horizontal-scroll.ts",
    "test:e2e": "playwright test --config e2e/playwright.config.ts",
    "test:e2e:headed": "playwright test --config e2e/playwright.config.ts --headed",
    "test:unit": "bun test src/store/*.test.ts && bun test src/lib/**/*.test.ts && bun test server/services/*.test.ts && bun test server/routes/*.test.ts server/ws/*.test.ts",
    "test:e2e:ui": "playwright test --config e2e/playwright.config.ts --ui",
    "tauri": "tauri",
    "tauri:dev": "tauri dev"
  },
  "dependencies": {
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-process": "^2",
    "@tauri-apps/plugin-updater": "^2",
    "ghostty-web": "^0.4.0",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.3",
    "mermaid": "^11.12.3",
    "solid-js": "^1.9.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/vite": "^4.1.8",
    "@tauri-apps/cli": "^2.5.0",
    "concurrently": "^9.1.2",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-solid": "^2.11.6"
  }
}
