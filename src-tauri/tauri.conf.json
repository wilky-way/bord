{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "bord",
  "version": "0.3.0",
  "identifier": "com.bord.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "",
    "beforeBuildCommand": "bun run build && bun run build:server && mkdir -p src-tauri/resources && cp dist/bord-server src-tauri/resources/bord-server && cp server/schema.sql src-tauri/resources/schema.sql"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Bord",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "resources": [
      "resources"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/wilky-way/bord/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEI1NENERjZBQzhDRTUyMzUKUldRMVVzN0lhdDlNdGYrdkNHREZvcElScjkxUi9NYTdLRkVGVU5MaDJwUWpoU3d0U05ISFM2ckEK"
    }
  }
}
